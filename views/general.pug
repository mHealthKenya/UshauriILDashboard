extends layout/base

block content

    #heading
      h1.text-center Realtime Logs

    #content

    
    //- Do it like this...You're already in JavaScript land after the -
    - var items = rows
      
      div

        script.

          $(document).ready(function() {
            $('#resultTable').DataTable({
              "order": [[ 0, "desc" ]],
              "lengthMenu": [[100, 250, 500, -1], [100, 250, 500, "All"]]
              });
          });


        div.text-center
          form(method="POST", action="/general-logs")
              label(for='from') From  :
              input(type='date', name='start_date', id='start_date')
              label(for='to') To  :
              input(type='date', name='end_date', id='end_date')
              input(type='submit',name='submit',value='Submit', class='btn btn-primary').submit-button

        div

          table#resultTable.table.thead-light 
            thead 
              tr: th First Name
                  th Last Name
                  th Clien Number
                  th File Number 
                  th Source  
                  th Logs 
            tbody 
              each item in items

                tr 
                  td=item.f_name
                  td=item.l_name
                  td=item.clinic_number
                  td=item.file_no
                  td=item.sending_application
                  td=item.send_log




    
